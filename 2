#include <iostream>
using namespace std;

class Number {
protected:
    int num;
public:
    void getNumber() {
        cout << "Enter a number: ";
        cin >> num;
    }
};

class Square : public Number {
public:
    void displaySquare() {
        cout << "Square of " << num << " is " << num * num << endl;
    }
};

class Cube : public Number {
public:
    void displayCube() {
        cout << "Cube of " << num << " is " << num * num * num << endl;
    }
};

int main() {
    Square s;
    Cube c;

    s.getNumber();       
    c.getNumber();

    s.displaySquare();
    c.displayCube();

    return 0;
}
